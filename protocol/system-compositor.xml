<protocol name="system">
  <interface name="wl_system_compositor" version="1">
    <description summary="Manage multiple users' displays">

    </description>
    
    <request name="display_surface"> 
      <description summary="present surface for display">
        This requests the system compositor to display @surface. Each client
        of the system compositor can have at most one surface displayed at any
        time.
      </description>
      <arg name="surface" type="object" interface="wl_surface"/>
    </request>

    <event name="becoming_visible">
    </event>
    
    <event name="lost_visibility">
      <description summary="">
      </description>
    </event>
  </interface>
</protocol>
    
         
